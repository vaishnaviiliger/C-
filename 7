#include <iostream>
using namespace std;

class Student {
private:
    int rollNo;
    float marks;
public:
    void inputDetails() {
        cout << "Enter Roll Number: ";
        cin >> rollNo;
        cout << "Enter Marks: ";
        cin >> marks;
    }
    void displayDetails() {
        cout << "Roll Number: " << rollNo << " Marks: " << marks << endl;
    }
};
int main() {
    int n;
    cout << "Enter number of students: ";
    cin >> n;
    Student students[n];
    for (int i = 0; i < n; i++) {
        cout << "\nEnter details for student " << (i + 1) << ":\n";
        students[i].inputDetails();
    }
    cout << "\nDetails of all students:\n";
    for (int i = 0; i < n; i++) {
        students[i].displayDetails();
    }
    return 0;
}
