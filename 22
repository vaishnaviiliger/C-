#include <iostream>
using namespace std;

template <class T>
class Sample {
    T a, b;
public:
    void getdata() {
        cout << "Enter two values: ";
        cin >> a >> b;
    }
    void add() {
        cout << "Addition = " << a + b << endl;
    }
};
int main() {
    Sample<int> s;
    s.getdata();
    s.add();
    return 0;
}
